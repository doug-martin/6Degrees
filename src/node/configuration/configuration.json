[
    {
        "server" : "./servers/RequestServer",
        "port" : "8088",
        "host" : "127.0.0.1",
        "path" : "/6Degrees",
        "POST" : {
            "methods" : [
                {
                    "handler" : "../../services/auth.js",
                    "operations" : [
                        {
                            "method" : "login",
                            "params" : "email,password",
                            "session" : false
                        },
                        {
                            "method" : "createUser",
                            "params" : "user",
                            "session" : false
                        }
                    ]
                }
            ]
        },
        "GET" : {
            "dirs" : [
                {
                    "path" : "/js/",
                    "dir" : "../web/js/"
                },
                {
                    "path" : "/css/",
                    "dir" : "../web/css/"
                },
                {
                    "path" : "/images/",
                    "dir" : "../web/images/"
                }
            ],
            "methods" : [
                {
                    "handler" : "../../services/auth.js",
                    "operations" : [
                        {
                            "method" : "checkStatus",
                            "session" : false,
                            "path" : "/"
                        },
                        {
                            "method" : "logout",
                            "session" : false                            
                        }
                    ]
                },
                {
                    "handler" : "../../services/user.js",
                    "operations" : [
                        {
                            "method" : "getFriends",                            
                            "session" : true
                        },
                        {
                            "method" : "findConnection",
                            "params" : "target",
                            "session" : true
                        },
                        {
                            "method" : "sendMessage",
                            "params" : "person,message",
                            "session" : true
                        },
                        {
                            "method" : "getInfo",
                            "session" : true
                        }
                    ]
                }
            ]
        },
        "welcomeFiles" :  [
            {
                "path" : "/logon",
                "file" : "../web/logon.html"
            },
            {
                "path" : "/home",
                "session" : true,
                "file" : "../web/home.html"
            }
        ],
        "errorFiles" : [
            {
                "code" : 404,
                "file" : "../web/error.html"
            },
            {
                "code" : 405,
                "file" : "../web/error.html"
            },
            {
                "code" : 401,
                "file" : "../web/unauthorized.html"
            }
        ]
    }
]